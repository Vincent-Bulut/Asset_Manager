
import pandas as pd

# Supposons que df est votre DataFrame et 'clé' est le nom de votre colonne clé

# Ajouter une colonne temporaire pour stocker la valeur absolue de la colonne 19
df['col_19_abs'] = df['colonne_19'].abs()

# Grouper par la colonne clé et garder l'index du maximum de la colonne 19 en valeur absolue
result_df = df.loc[df.groupby('clé')['col_19_abs'].idxmax()]

# Supprimer la colonne temporaire
result_df = result_df.drop(columns=['col_19_abs'])

# Résultat final
print(result_df)