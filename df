
from sqlalchemy.orm import Session

def check_bm_assistant_exists(session: Session, ut_assistant: str, ut_bm: str) -> bool:
    """
    Vérifie si une ligne existe dans la table BmAssistants pour les valeurs données de ut_assistant et ut_bm.

    :param session: Instance de la session SQLAlchemy.
    :param ut_assistant: Code de l'assistant à vérifier.
    :param ut_bm: Code du business manager à vérifier.
    :return: True si une ligne existe, sinon False.
    """
    exists = session.query(BmAssistants).filter_by(ut_assistant=ut_assistant, ut_bm=ut_bm).first()
    return exists is not None