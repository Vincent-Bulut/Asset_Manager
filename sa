
import gnupg

# Initialiser GPG
gpg = gnupg.GPG(gnupghome="/chemin/vers/votre/.gnupg")

# Ouvrir le fichier .gpg à déchiffrer
with open("fichier.gpg", "rb") as encrypted_file:
    decrypted_data = gpg.decrypt_file(encrypted_file)

# Vérifier si le déchiffrement a réussi
if decrypted_data.ok:
    print("Déchiffrement réussi !")
    print(decrypted_data.data.decode("utf-8"))  # Afficher les données déchiffrées
else:
    print(f"Erreur : {decrypted_data.status}")