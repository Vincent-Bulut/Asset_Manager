
SELECT 
    PNL1.Date_Arrete, 
    Month(PNL1.Date_Arrete) AS Mois, 
    Year(PNL1.Date_Arrete) AS Annee, 
    PNL1.PNL_YTD, 
    IIf(Month(PNL1.Date_Arrete) = 1, PNL1.PNL_YTD, 
        PNL1.PNL_YTD - Nz(PNL2.PNL_YTD, 0)) AS PNL_Mensuel
FROM PNL_Table AS PNL1
LEFT JOIN PNL_Table AS PNL2 
ON PNL1.Date_Arrete = DateAdd("m", 1, PNL2.Date_Arrete)
ORDER BY PNL1.Date_Arrete;