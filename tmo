
function getFormHTML() {
  // Sélectionne le formulaire
  const form = document.getElementById('myForm');
  
  // Parcourt les champs du formulaire pour mettre à jour leurs valeurs dans le DOM
  const inputs = form.querySelectorAll('input, select, textarea');
  inputs.forEach(input => {
    if (input.tagName === 'SELECT') {
      // Gère les listes déroulantes
      const options = input.options;
      for (let i = 0; i < options.length; i++) {
        if (options[i].selected) {
          options[i].setAttribute('selected', 'selected');
        } else {
          options[i].removeAttribute('selected');
        }
      }
    } else if (input.type === 'checkbox' || input.type === 'radio') {
      // Gère les cases à cocher et boutons radio
      if (input.checked) input.setAttribute('checked', 'checked');
      else input.removeAttribute('checked');
    } else {
      // Gère les champs texte, email, etc.
      input.setAttribute('value', input.value);
    }
  });

  // Récupère le HTML du formulaire
  const formHTML = form.outerHTML;

  // Affiche le résultat
  document.getElementById('output').textContent = formHTML;
}