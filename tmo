
const response = await axios.post("/export/zip-and-encrypt", null, {
    params: { dac6_xml: "<xml><data>Exemple</data></xml>" },
    responseType: "blob"
});

// Télécharger le fichier avec le nom exact reçu
const disposition = response.headers["content-disposition"];
const fileName = disposition ? disposition.split("filename=")[1].replace(/"/g, "") : "fichier_par_defaut.gpg";

const blob = new Blob([response.data], { type: "application/octet-stream" });
const downloadUrl = URL.createObjectURL(blob);

const link = document.createElement("a");
link.href = downloadUrl;
link.download = fileName;
document.body.appendChild(link);
link.click();
document.body.removeChild(link);
URL.revokeObjectURL(downloadUrl);