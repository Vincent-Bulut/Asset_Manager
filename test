
import pandas as pd

# Exemple de dataframe
data = {'montant': [100, 200, 300, 150],
        'categorie': ['A', 'B', 'C', 'D']}
df = pd.DataFrame(data)

# Récupérer l'index de la ligne avec le montant maximum
index_max = df['montant'].idxmax()

# Récupérer toutes les lignes en dehors de celle contenant le montant maximum
df_without_max = df.drop(index_max)

# Récupérer uniquement la ligne avec le montant maximum
df_max = df.loc[[index_max]]

print("Toutes les lignes sauf celle avec le montant max:")
print(df_without_max)

print("\nLigne avec le montant max:")
print(df_max)