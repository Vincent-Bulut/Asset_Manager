
error_log /dev/stdout debug;

events {
    worker_connections 1024;
}

http {
    server {
        listen 5700;
        server_name profit-split.wac.dev.emea.cib profit-split.wac.int.emea.cib profit-split.wac.emea.cib;

        location / {
            proxy_pass http://webapp:80/;
            try_files $uri $uri/ /index.html;  # Important pour le routage client-side de SvelteKit
        }

        location /api/ {
            proxy_pass http://api:8000/;
        }

        # Servir les fichiers statiques (JS, CSS, images, etc.)
        location ~* \.(?:css|js|jpg|jpeg|gif|png|ico|svg|woff|woff2|ttf|eot)$ {
            try_files $uri =404;
            access_log off;
            add_header Cache-Control "public, max-age=3600";
        }

        # Gérer les fichiers spécifiques comme favicon.ico et robots.txt
        location = /favicon.ico {
            try_files /favicon.ico =204;
        }
        location = /robots.txt {
            try_files /robots.txt =204;
        }

        # Rediriger les erreurs 404 vers l'index pour permettre le routage côté client
        error_page 404 /index.html;
    }
}