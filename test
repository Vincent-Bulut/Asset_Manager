
import pandas as pd

# Deux DataFrames avec des indices différents
df1 = pd.DataFrame({
    'A': [1, 2, 3],
    'B': [4, 5, 6]
}, index=[0, 1, 2])

df2 = pd.DataFrame({
    'C': [7, 8],
    'D': [9, 10]
}, index=[1, 2])

# Concaténation sur l'axe des colonnes avec alignement sur les indices
result = pd.concat([df1, df2], axis=1).fillna(0)

print(result)