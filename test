
server {
    listen 80;
    server_name yourdomain.com;

    root /path/to/your/sveltekit/build;
    index index.html;

    # Servir les fichiers statiques
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Gérer les fichiers spécifiques comme favicon.ico et robots.txt
    location = /favicon.ico {
        try_files /favicon.ico =204;
    }
    location = /robots.txt {
        try_files /robots.txt =204;
    }

    # Servir les ressources statiques (JS, CSS, images, etc.)
    location ~* \.(?:css|js|jpg|jpeg|gif|png|ico|svg|woff|woff2|ttf|eot)$ {
        try_files $uri =404;
        access_log off;
        add_header Cache-Control "public, max-age=3600";
    }

    # Rediriger les erreurs 404 vers l'index pour permettre le routage côté client
    error_page 404 /index.html;

    # Gérer les API ou autres routes spécifiques si nécessaire
    location /api {
        proxy_pass http://backend_server;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}